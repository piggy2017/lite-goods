page {
    min-height: 100%;
    background-color: #f2f2f2;
    font-family: PingFangSC-Regular;
}

.order-class {
    height: 84rpx;
    width: 100%;
    background-color: #fff;
    display: flex;
    flex-flow: row nowrap;
    align-items: center;
    border-top: 4rpx solid #f2f2f2;
    position: fixed;
    z-index: 99;
    top: 0;
}
.fail-result{
    font-family: PingFangSC-Regular;
    font-size: 24px;
    color: #AAAAAA;
    letter-spacing: 0.86px;
}

.coupon-none {
    text-align: center;
    margin-top: 30rpx;
    font-size: 30rpx;
    color: #f08d7e;
}

.container-kong {
    margin: 320rpx auto 0 auto;
    width: 304rpx;
    height: 240rpx;
}

.container-kong image {
    width: 304rpx;
    height: 240rpx;
}

.guangguang {
    margin: 60rpx auto 0 auto;
    width: 304rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    border-radius: 40rpx;
    border: 1rpx solid #e6e6e6;
    color: #aaa;
    font-size: 28rpx;
}

.hr {
    width: 100%;
    height: 86rpx;
    background-color: #f2f2f2;
}

.order-class-item {
    width: 25%;
    height: 100%;
    text-align: center;
    font-size: 28rpx;
    color: #999;
    line-height: 84rpx;
    position: relative;
}

.order-class-active {
    font-family: PingFangSC-Semibold;
    font-size: 36rpx;
    color: #000;
    font-weight: bold;
}

.order-class-active::after {
    content: "";
    position: absolute;
    z-index: 99;
    bottom: 1rpx;
    left: 30rpx;
    right: 30rpx;
    height: 6rpx;
    background: #d53333;
}

.my-order-item {
    width: 100%;
    min-height: 392rpx;
    background-color: #fff;
    margin-top: 20rpx;
    /* padding-bottom: 20rpx; */
}

/* .my-order-item:first-child{
    margin-top: 120rpx !important;
} */

.my-order-item-title {
    height: 80rpx;
    display: flex;
    flex-flow: row nowrap;
    justify-content: space-between;
    align-items: center;
    font-family: PingFangSC-Semibold;
    font-size: 28rpx;
    color: #bbb;
    padding: 0 30rpx;
}

.my-order-item-title-left {
    height: 100%;
    display: flex;
    flex-flow: row nowrap;
    align-items: center;
}

.my-order-item-title-left image {
    width: 32rpx;
    height: 32rpx;
    margin-right: 16rpx;
}

.my-order-item-title-right {
    color: #666;
    font-weight: bold;
}

.title-red {
    color: #d53333 !important;
}

.my-order-item-content-url {
    height: 132rpx;
    background: #f6f6f6;
    display: flex;
    flex-flow: row nowrap;
    justify-content: space-between;
    padding: 20rpx 30rpx;
}

.my-order-item-content-left {
    width: 132rpx;
    height: 132rpx;
    margin-right: 20rpx;
    border-radius: 8rpx;
}

.my-order-item-content-left image {
    width: 100%;
    height: 100%;
    border-radius: 8rpx;
}

.my-order-item-content-right {
    display: flex;
    flex-flow: row nowrap;
    justify-content: space-between;
    font-family: PingFangSC-Regular;
    font-size: 28rpx;
    color: #333;
}

.my-order-goods-left {
    width: 420rpx;
    display: flex;
    flex-flow: column nowrap;
    justify-content: space-between;
}

.my-order-goods-name {
    font-family: PingFangSC-Regular;
    font-size: 28rpx;
    color: #333;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical !important;
    overflow: hidden;
}

.my-order-goods-speci {
    font-size: 24rpx;
    color: #999;
    margin-bottom: 10rpx;
}

.my-order-goods-right {
    width: 118rpx;
    text-align: right;
}

.unit-price {
    font-family: PingFangSC-Semibold;
    font-size: 28rpx;
    color: #333;
}

.goods-num {
    font-family: PingFangSC-Light;
    font-size: 24rpx;
    color: #888;
    margin-top: 8rpx;
}

.my-order-item-bot {
    text-align: right;
    padding-right: 30rpx;
}

.total-price {
    margin-top: 14rpx;
    font-family: PingFangSC-Regular;
    font-size: 24rpx;
    color: #666;
}

.total-price-right {
    font-family: PingFangSC-Semibold;
    font-size: 28rpx;
    color: #333;
    margin-left: 8rpx;
    font-weight: bold;
}

.my-order-item-btn {
    display: flex;
    flex-flow: row nowrap;
    justify-content: flex-end;
    margin-top: 20rpx;
    padding-bottom: 20rpx;
}
.my-order-item-btn-2{
     display: flex;
    flex-flow: row nowrap;
    justify-content: space-between;
    width: 100%;
}

.my-order-item-btn-1 {
    display: flex;
    flex-flow: row nowrap;
    justify-content: space-between;
    width: 100%;
}

.wait-fahuo {
    background-color: #f2f2f2;
    margin-left: 20rpx;
}
.view-wuliu{
    background-color: #d53333;
    color: #fff;
    margin-left: 10rpx;
}

.zhongjiang-left {
    margin-left: 20rpx;
    font-family: PingFangSC-Regular;
    font-size: 28rpx;
    color: #eb7a63;
    letter-spacing: 0.5px;
    display: flex;
    flex-flow: row nowrap;
    align-items: center;
}

.zhongjiang-left image {
    width: 34rpx;
    height: 36rpx;
    margin-right: 10rpx;
}

.zjongjiang-right {
    display: flex;
    flex-flow: row nowrap;
}

.order-btn {
    width: 180rpx;
    height: 52rpx;
    line-height: 52rpx;
    box-sizing: border-box;
    text-align: center;
    border-radius: 4rpx;
    font-family: PingFangSC-Regular;
    font-size: 26rpx;
    letter-spacing: 0.92rpx;
}

.share-order {
    background: #d53333;
    border: 1rpx solid #d53333;
    color: #fff;
    padding: 0;
}

.margin-right-20 {
    margin-right: 20rpx;
}

.detail-order {
    background-color: fff;
    border: 1rpx solid #d53333;
    color: #d53333;
}
