page {
    width: 100%;
    min-height: 100%;
    background-color: #f2f2f2;
}

.my-order-item {
    width: 100%;
    min-height: 392rpx;
    background-color: #fff;
    margin-top: 20rpx;
    /* padding-bottom: 20rpx; */
}

.my-order-item-title {
    height: 80rpx;
    display: flex;
    flex-flow: row nowrap;
    justify-content: space-between;
    align-items: center;
    font-family: PingFangSC-Semibold;
    font-size: 28rpx;
    color: #bbb;
    padding: 0 30rpx;
}

.container-kong {
    margin: 320rpx auto 0 auto;
    width: 272rpx;
    height: 240rpx;
}

.container-kong image {
    width: 272rpx;
    height: 240rpx;
}

.coupon-none {
    text-align: center;
    margin-top: 30rpx;
    font-size: 30rpx;
    color: #f08d7e;
}

.my-order-item-title-left {
    height: 100%;
    display: flex;
    flex-flow: row nowrap;
    align-items: center;
}

.my-order-item-title-left image {
    width: 32rpx;
    height: 32rpx;
    margin-right: 16rpx;
}

.my-order-item-title-right {
    color: #666;
    font-weight: bold;
}

.title-red {
    color: #d53333 !important;
}

.my-order-item-content-url {
    height: 132rpx;
    background: #f6f6f6;
    display: flex;
    flex-flow: row nowrap;
    justify-content: space-between;
    padding: 20rpx 30rpx;
}

.my-order-item-content-left {
    width: 132rpx;
    height: 132rpx;
    margin-right: 20rpx;
    border-radius: 8rpx;
}

.my-order-item-content-left image {
    width: 100%;
    height: 100%;
    border-radius: 8rpx;
}

.my-order-item-content-right {
    display: flex;
    flex-flow: row nowrap;
    justify-content: space-between;
    font-family: PingFangSC-Regular;
    font-size: 28rpx;
    color: #333;
}

.my-order-goods-left {
    width: 420rpx;
    display: flex;
    flex-flow: column nowrap;
    justify-content: space-between;
}

.my-order-goods-name {
    font-family: PingFangSC-Regular;
    font-size: 28rpx;
    color: #333;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical !important;
    overflow: hidden;
}

.my-order-goods-speci {
    font-size: 24rpx;
    color: #999;
    margin-bottom: 10rpx;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical !important;
    overflow: hidden;
}

.my-order-goods-right {
    width: 118rpx;
    text-align: right;
}

.unit-price {
    font-family: PingFangSC-Semibold;
    font-size: 28rpx;
    color: #333;
}

.goods-num {
    font-family: PingFangSC-Light;
    font-size: 24rpx;
    color: #888;
    margin-top: 8rpx;
}

.my-order-item-bot {
    text-align: right;
    padding-right: 30rpx;
}

.total-price {
    margin-top: 14rpx;
    font-family: PingFangSC-Regular;
    font-size: 24rpx;
    color: #666;
}

.total-price-right {
    font-family: PingFangSC-Semibold;
    font-size: 28rpx;
    color: #333;
    margin-left: 8rpx;
    font-weight: bold;
}

.my-order-item-btn {
    display: flex;
    flex-flow: row nowrap;
    justify-content: space-between;
    margin-top: 20rpx;
}

.my-order-item-btn-tishi {
    font-family: PingFangSC-Regular;
    font-size: 24rpx;
    color: #aaa;
    padding-left: 30rpx;
}

.order-btn {
    width: 136rpx;
    height: 52rpx;
    line-height: 52rpx;
    box-sizing: border-box;
    text-align: center;
    border-radius: 4rpx;
    font-family: PingFangSC-Regular;
    font-size: 26rpx;
    letter-spacing: 0.92rpx;
}

.cancel-order {
    background: #fff;
    border: 1rpx solid #d53333;
    color: #d53333;
}
